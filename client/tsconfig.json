{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./public",
        "rootDir": "./src",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@shared/*": ["../shared/dist/*"]
        },
        "composite": true,
        "declaration": true,
        "noImplicitAny": true
    },
    "references": [
        { "path": "../shared" }
    ],
    "include": [
        "src/**/*"
    ]
}
