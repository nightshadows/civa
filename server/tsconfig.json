{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "paths": {
            "@shared/*": ["../shared/dist/*"]
        },
    },
    "include": ["src/**/*"],
    "references": [
        { "path": "../shared" }
    ]
}